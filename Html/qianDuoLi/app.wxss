}

button{
  margin-left:0;
  margin-right:0;
  padding-left:0;
  padding-right:0;

}



/* 弹框 */
.msg{
    position: fixed;
    left: 0;
    top: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    opacity: 0;
    transition: all .2s;
    z-index: 102;
}
.msg.on{
    top: 50%;
    opacity: 1;
    transition: all .2s;
}
.msg-box{
    background-color: rgba(0,0,0,.7);
    color: #fff;
    padding: 20rpx;
    font-size: 30rpx;
    border-radius: 10rpx;
    max-width: 80%;
}