/* pages/afterInfo/afterInfo.wxss */
.refund{
  position: relative;
}
.as-info .linem {
    padding: 0 15rpx;
    background: #fff;
    border-bottom: 1px solid #e8e8e8;
    line-height: 86rpx;
    display: flex;
    justify-content: space-between;
}

.as-info .linem .tt {
    width: 165rpx;
    font-size: 30rpx;
    color: #333;
}

.as-info .linem .price {
    font-family: 'Arial';
    font-size: 36rpx;
    color: #e84608;
}

.as-info .linem .reason {
    width: 445rpx;
    font-size: 26rpx;
    line-height: 36rpx;
    color: #999;
    margin-top: 26rpx;
    padding-bottom: 40rpx;
}

.as-info .getsuccess {
    font-size: 30rpx;
    line-height: 48rpx;
    color: #333;
    margin-top: 26rpx;
}

.as-info .seal {
    position: absolute;
    width: 162rpx;
    height: 76rpx;
    right: 15rpx;
    bottom: 0rpx;
}

.as-info .seal.succeed {
    background-repeat: no-repeat;
    background-size: cover;
}

.as-info .seal.faid {
     background-repeat: no-repeat;
    background-size: cover;
}

.as-info .seal.pass {
     background-repeat: no-repeat;
    background-size: cover;
}

.as-info .tips {
    font-size: 26rpx;
    line-height: 48rpx;
    color: #666666;
    margin-top: 30rpx;
}


.as-info .status {
    padding: 24rpx 15rpx 27rpx;
    background: #fff;
    border-bottom: 1rpx solid #e8e8e8;
    margin-bottom: 20rpx;
}

.as-info .status .color {
    color: #78a000;
}
.as-info .status .p {
    font-size: 26rpx;
    line-height: 48rpx;
    color: #333;
}
.as-info .status .p .e84608 {
    display: inline-block;
}
.as-info .status .time {
    color: #78a000;
}

.as-info .status .btns {
    margin-top: 44rpx;
    display: flex;
    justify-content: space-between;
}

.as-info .status .btns .btn {
    width: 333rpx;
    height: 86rpx;
    border: 1rpx solid #999999;
    line-height: 86rpx;
    text-align: center;
    font-size: 36rpx;
    color: #999;
    border-radius: 8rpx;
    display: block;
}

.as-info .status .btns .btn.cur {
    border-color: #5BB3FF;
    color: #5BB3FF;
}

.as-info .status .btns .bigbtn {
    width:100%;
    height: 86rpx;
    border: 1rpx solid #5BB3FF;
    color: #5BB3FF;
    text-align: center;
    font-size: 36rpx;
    border-radius: 8rpx;
    line-height: 86rpx;
    display: block;
}


.pro-style {
    background: #fff;
    margin-top: 20rpx;
    border-top: 1px solid #e8e8e8;
    border-bottom: 1px solid #e8e8e8;
    padding: 28rpx 15rpx;
    display: flex;
}
.pro-style .img {
    width: 133rpx;
    height: 133rpx;
    border: 1rpx solid #e8e8e8;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    margin-right: 26rpx;
}
.pro-style .info {
    width: 400rpx;
}
.pro-style .name {
    font-size: 30rpx;
    line-height: 36rpx;
    color: #333;
    height: 72rpx;
    overflow: hidden;
}
.pro-style .num {
    width: 145rpx;
    text-align: right;
    font-size: 24rpx;
    line-height: 24rpx;
}
.pro-style .num .price {
    color: #333;
    margin-top: 10rpx;
}
.pro-style .back {
    display: block;
    border: 1rpx solid #999999;
    color: #999999;
    font-size: 24rpx;
    text-align: center;
    line-height: 51rpx;
    padding: 0 14rpx;
    border-radius: 8repx;
    height: 51rpx;
    margin-top: 15rpx;
}
.pro-style .num .number {
    margin-top: 18rpx;
    color: #666;
}
.pro-style .color {
    font-size: 24rpx;
    line-height: 24rpx;
    color: #999999;
    margin-top: 25rpx;
    width: 300rpx;
}