<!--pages/partPlan/partPlan.wxml-->
<view>
  <view class="par-plan">
    <view class="textarea" id="textarea">
      <view class="title">{{info.Title}}</view>
      <view class="p">{{info.SubTitle}}</view>
      <rich-text class="bd" nodes="{{info.Content}}"/>
      <!-- <view class="bd">{{info.Content}}</view> -->
    </view>
    <button class="submit wxshare" open-type="share">立即分享，邀请合伙人</button>
  </view>
</view>

<!--msg-->
<view class="msg {{msgShow?'on':''}}">
    <view class="msg-box">{{msgTitle}}</view>
</view>