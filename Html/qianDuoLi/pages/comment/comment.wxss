/* pages/comment/comment.wxss */

.comment .box {
  margin-bottom: 20rpx;
}

.comment .info {
  width: 430rpx;
}

.comment .pro-style {
  background: #fff;
  display: flex;
  justify-content: space-between;
}

.comment .line {
  padding: 0 15rpx;
  border-bottom: 1px solid #e8e8e8;
  background: #fff;
  overflow: hidden;
  display: flex;
  position: relative;
}

.comment .line .tt {
  float: left;
  font-size: 30rpx;
  color: #333;
  line-height: 88rpx;
  width: 159rpx;
}

.comment .line ul {
  float: left;
  margin-top: 28rpx;
}

.comment .line li {
  width: 36rpx;
  height: 34rpx;
  float: left;
  margin-right: 6rpx;
  background-repeat: no-repeat;
  background-size: cover;
}

.comment .line li.cur {
  background-repeat: no-repeat;
  background-size: cover;
}

.comment .line .textarea {
  margin-top: 30rpx;
  width: 560rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #999;
  height: 155rpx;
  background: none;
  border: 0;
  float: right;
}

.comment .line .cal {
  font-size: 26rpx;
  line-height: 34rpx;
  color: #999;
  padding-bottom: 8rpx;
  display: flex;
  position: absolute;
  bottom: 0;
  right: 20rpx;
}

.comment .line .body-view {
  margin-top: 13rpx;
}

.comment .submit {
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: #5bb3ff;
  position: fixed;
  left: 0;
  bottom: 0;
  border: 0;
}

.pro-style {
  border-bottom: 1px solid #e8e8e8;
  display: block;
  height: 130rpx;
  padding: 28rpx 15rpx;
}

.pro-style .img {
  width: 133rpx;
  height: 133rpx;
  border: 1px solid #e8e8e8;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  margin-right: 26rpx;
  display: block;
}

.pro-style .proLeft {
  display: flex;
}

.pro-style .name {
  font-size: 30rpx;
  line-height: 36rpx;
  color: #333;
  height: 72rpx;
  overflow: hidden;
}

.pro-style .color {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-top: 25rpx;
  width: 300rpx;
}

.pro-style .color .span {
  margin-right: 8rpx;
}

.pro-style .num {
  width: 145rpx;
  text-align: right;
  font-size: 24rpx;
  line-height: 24rpx;
}

.pro-style .num .price {
  color: #333;
  margin-top: 10rpx;
}

.pro-style .num .number {
  margin-top: 18rpx;
  color: #666;
}

.comment .ul {
  padding-top: 20rpx;
}

.comment .li {
  width: 36rpx;
  height: 34rpx;
  float: left;
  margin-right: 10rpx;
  background-repeat: no-repeat;
  background-size: cover;
}

.imageBox {
  padding: 15rpx;
  margin-top: 20rpx;
  background: #fff;
  font-size: 30rpx;
  color: #333;
}

.imageBox .imageTitle {
  margin-bottom: 20rpx;
}

.imageBox .upImage {
  width: 200rpx;
  height: 200rpx;
  margin-right: 40rpx;
}

.logoinfo {
  position: relative;
  margin-right: 40rpx;
  margin-bottom: 10rpx;
}

.logoinfo image {
  width: 200rpx;
  height: 200rpx;
}

.logoinfo .xxx {
  position: absolute;
  right: 0;
  top: 0;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 1px solid #eee;
  color: #eee;
  text-align: center;
  line-height: 32rpx;
}

.imageInBox {
  display: flex;
  flex-wrap: wrap;
}

.block {
  width: 100%;
  height: 100rpx;
}
