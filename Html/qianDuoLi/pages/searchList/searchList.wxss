/* pages/searchList/searchList.wxss */

.search-box.nothing{
  top:90rpx;
  z-index: 998;
}


.search-box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #f7f7f7;
  z-index: 999;
}

.search-box .content {
  height: 78rpx;
  background: #fff;
  padding: 12rpx 15rpx 0;
  position: relative;
  z-index: 998;
  display: flex;
  justify-content: space-between;
}

.search-box .search {
  width: 630rpx;
  height: 65rpx;
  background-size: 100% 10rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
}
.search-box .search .searchLBox{
  display: flex;
}
.search-box .delete {
  width: 30rpx;
  height: 30rpx;
  background-size: contain;
  position: absolute;
  top: 17rpx;
  right: 17rpx;
  display: none;
}

.search-box .close {
  width: 60rpx;
  height: 65rpx;
  border: 0;
  background-repeat: no-repeat;
  background-position:center;
  background-size: 28rpx 30rpx;
  display: block;
}

.search-box .text {
  width: 470rpx;
  height: 65rpx;
  font-size: 28rpx;
  line-height: 65rpx;
  color: #999;
  border: 0;
  background: none;
  display: block;
  float: left;
}

.search-box .btn {
  width: 80rpx;
  height: 65rpx;
  color: #5BB3FF;
  text-align: center;
  font-size: 30rpx;
  line-height: 65rpx;
  display: block;
}

.search-box .con .p {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999999;
  padding: 30rpx 0 30rpx 12rpx;
}

.search-box .con navigator {
  float: left;
  font-size: 0.24rpx;
  color: #666;
  line-height: 0.69rpx;
  padding: 0 0.19rpx;
  margin-right: 0.27rpx;
  background: #eaeaea;
  margin-bottom: 0.25rpx;
  border-radius: 0.07rpx;
  display: block;
}

.search-box .con .ul {
  padding-left: 0.15rpx;
}

.search-box .con navigator.cur {
  background: #78a000;
  color: #fff;
}

.search-box .nothing {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 4;
  background: #f7f7f7;
  /*display: none;*/
}

.nothing .tb {
  width: 151rpx;
  height: 150rpx;
  margin: 254rpx auto 0;
  
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

.nothing .p {
  font-size: 30rpx;
  color: #666666;
  line-height:30rpx;
  text-align: center;
  margin-top: 69rpx;
}