/* pages/shopcar/shopcar.wxss */

.shopcar .box {
  padding: 30rpx 27rpx 0;
  height: 200rpx;
  border-bottom: 1px solid #e8e8e8;
  background: #fff;
  position: relative;
  display: flex;
  justify-content: space-between;
}

.shopcar .box navigator {
  display: block;
  width: 100%;
  height: 100%;
}

.shopcar .ccheck, .shopcar .pcheck {
  width: 40rpx;
  height: 40rpx;
  background: url(img/img30.png) no-repeat;
  background-size: 40rpx 40rpx;
}

.shopcar .ccheck.cur, .shopcar .pcheck.cur {
  background: url(img/img31.png) no-repeat;
  background-size: 40rpx 40rpx;
}

.shopcar .ccheck {
  margin-top: 79rpx;
  margin-right: 19rpx;
}

.shopcar .img {
  width: 160rpx;
  height: 160rpx;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.shopcar .info {
  width: 404rpx;
}

.shopcar .tt {
  font-size: 30rpx;
  line-height: 36rpx;
  color: #333;
  height: 72rpx;
  overflow: hidden;
}

.shopcar .tt navigator {
  color: #333;
}

.shopcar .tc {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-top: 17rpx;
  display: flex;
  justify-content: space-between;
}

.shopcar .tc .int .span {
  margin-right: 8rpx;
  display: inline-block;
}

.shopcar .tc .num .span {
  display: inline-block;
}

.shopcar .bot {
  margin-top: 29rpx;
  display: flex;
  justify-content: space-between;
}

.shopcar .price {
  font-size: 24rpx;
  line-height: 30rpx;
  font-family: 'Arial';
  color: #e84608;
}

.shopcar .price .amo {
  font-size: 30rpx;
  display: inline-block;
}

.shopcar .price .dec {
  font-size: 24rpx;
}

.shopcar .price .oldprice {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 5rpx;
}

.shopcar .edit {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #999;
}

.shopcar .editbox {
  position: absolute;
  width: 404rpx;
  top: 30rpx;
  right: 27rpx;
  background: #fff;
  height: 196rpx;
  z-index: 50;
}
.shopcar .editbox .numbox{
  display: flex;
}
.shopcar .jia, .shopcar .jian {
  width: 58rpx;
  height: 59rpx;
}

.shopcar .jia {
  background-size: cover;
}

.shopcar .jian {
  background-size: cover;
  margin-right: 24rpx;
}

.shopcar .amount {
  width: 84rpx;
  height: 57rpx;
  border: 1px solid #dbdbdb;
  border-radius: 4rpx;
  background: #f1f1f1;
  margin-right: 24rpx;
  font-size: 38rpx;
  color: #666;
  line-height: 57rpx;
  text-align: center;
}

.shopcar .good-name {
  width: 390rpx;
  height: 62rpx;
  background: #f1f1f1;
  margin-top: 9rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 62rpx;
  padding-left: 24rpx;
  display: flex;
  
}
.shopcar .good-name .span{
  margin-right: 10rpx;
}
.shopcar .btns {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-top: 15rpx;
  display: flex;
 justify-content:flex-end;
}

.shopcar .delete {
  padding-right: 24rpx;
  border-right: 1px solid #999;
}

.shopcar .ok {
  padding-left: 24rpx;
}

.shopcar .invalid {
  width: 52rpx;
  height: 37rpx;
  background-size: cover;
  margin-top: 58rpx;
  margin-right: 7rpx;
}

.car-list {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 99rpx;
  border-top: 1px solid #e8e8e8;
  background: #fff;
  display: flex;
  justify-content: space-between;
}

.car-list .choose {
  display: flex;
}

.car-list .pcheck {
  margin-left: 15rpx;
  margin-top: 32rpx;
}

.car-list .choose .allChoose {
  line-height: 99rpx;
  font-size: 36rpx;
  padding-left: 20rpx;
}

.carListChose{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.car-list .balance {
  width: 188rpx;
  height: 99rpx;
  background: #e84608;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 99rpx;
}
.car-list .balance .span{
  display: inline-block;
}
.car-list .total {
  padding-right: 33rpx;
  padding-top: 20rpx;
  text-align: right;
}

.car-list .total .p {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #666;
  display: flex;
}

.car-list .total .p .i, .car-list .total .p .span {
  color: #e84608;
  font-style: normal;
}
.car-list .noyF{
    font-size: 24rpx;
    line-height: 36rpx;
    color: #666;
    display: block;
}
.car-list .total .p .amo {
  font-size: 30rpx;
  color: #e84608;
  display: inline-block;
}
.clearsc {
    font-size: 30rpx;
    line-height: 45rpx;
    color: #999;
    text-align: center;
    margin-top: 20rpx;
}
.car-list .hj {
  line-height: 99rpx;
  font-size: 28rpx;
  color: #666;
  padding-left: 15rpx;
}

.car-list .hj .price {
  color: #e84608;
  font-family: 'Arial';
}

.car-list .hj .int {
  font-size: 36rpx;
}

.car-list .hj .postage {
  font-size: 24rpx;
  color: #999;
}

.search-box .nothing {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 4;
  background: #f7f7f7;
  /*display: none;*/
}

.nothing .tb {
  width: 151rpx;
  height: 150rpx;
  margin: 254rpx auto 0;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.nothing .p {
  font-size: 30rpx;
  color: #666;
  line-height: 30rpx;
  text-align: center;
  margin-top: 69rpx;
}

.NoBnt {
  width: 293rpx;
  height: 86rpx;
  display: block;
  text-align: center;
  font-size: 36rpx;
  line-height: 86rpx;
  color: #5bb3ff;
  border: 1px solid #5bb3ff;
  margin: 47rpx auto;
  border-radius: 8rpx;
}
