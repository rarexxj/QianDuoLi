/* pages/pay/pay.wxss */

.shoppay .deadline {
    width: 100%;
    height: 67rpx;
    background: #ffffcc;
    border-top: 1px solid #dedfe0;
    border-bottom: 1px solid #dedfe0;
    text-align: center;
    line-height: 67rpx;
    font-size: 24rpx;
    color: #666;
    display: flex;
    justify-content: center;
}
.shoppay .deadline span {
    color: #78a000;
}
.shoppay .line {
    padding: 0 15rpx;
    height: 86rpx;
    background: #fff;
    line-height: 86rpx;
    border-top: 1px solid #e8e8e8;
    display: flex;
    justify-content: space-between;
}
.shoppay .line .tt {
    font-size: 30rpx;
    color: #333;
}
.shoppay .line .num {
    font-size: 24rpx;
    color: #999999;
}
.shoppay .line .price {
    font-family: 'Arial';
    color: #e84608;
    font-size: 24rpx;
}
.shoppay .line .price .int {
    font-size: 30rpx;
    display: inline-block;
}
.shoppay .line .paymore {
    color: #999999;
     font-size: 24rpx;
}
.shoppay .line .paymore .price{
  display: inline-block;
}
.shoppay .payline {
    padding: 18rpx 15rpx;
    background: #fff;
    border-top: 1px solid #e8e8e8;
    background-size: 40rpx 40rpx;
    position: relative;
    display:flex;
}
.shoppay .payline .tb {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}
.shoppay .payline .tt {
    font-size: 30rpx;
    line-height: 56rpx;
}
.shoppay .payline .tt .span {
    display: block;
    font-size: 24rpx;
    line-height: 30rpx;
    color: #999999;
    padding-bottom:5rpx;
}
.shoppay .payline .btn {
    width: 40rpx;
    height:40rpx;
    background-repeat:no-repeat;
    background-size: cover;
    position: absolute;
    right: 17rpx;
    top: 21rpx;
}
.shoppay .payline.cur .btn {
    background-repeat:no-repeat;
    background-size: cover;
}
.shoppay .money .tb {
    background-repeat:no-repeat;
    background-size: cover;
}
.shoppay .weixin .tb {
    background-repeat:no-repeat;
    background-size: cover;
}
.shoppay .alipay .tb {
    background-repeat:no-repeat;
    background-size: cover;
}
.bot-btn {
    width: 100%;
    height: 100rpx;
    font-size: 36rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    background: #5BB3FF;
    position: fixed;
    left: 0;
    bottom: 0;
    border: 0;
}